<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="12dp"
    app:cardElevation="15dp"
    android:background="@color/yellow"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardElevation="25dp"
            android:id="@+id/icon"
            app:cardCornerRadius="37.5dp">
            <RelativeLayout
                android:id="@+id/job"
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/milestone" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/icon"
            android:fontFamily="@font/castoro"
            android:text="Location of the Job place"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/icon"
            android:layout_marginBottom="20dp"
            android:background="@drawable/required"
            android:padding="5dp"
            android:text="5"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/wheels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/required"
            android:background="@drawable/required"
            android:padding="5dp"
            android:text="5 wheeler"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/wheels"
            android:background="@drawable/required"
            android:padding="5dp"
            android:text="CONTRACTUAL"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_alignBottom="@+id/icon"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:text="11 Nov 2000"
            android:textColor="#9A9999"
            android:textSize="12sp"
            android:textStyle="normal"
            app:drawableStartCompat="@drawable/ic_date" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>